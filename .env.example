# Flask应用配置
FLASK_APP=run.py
FLASK_ENV=production

# 安全密钥（生产环境请修改）
SECRET_KEY=your-secret-key-change-this-in-production

# 数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=aublog_user
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=aublog

# 博客基本信息
BLOG_TITLE=我的个人博客
BLOG_SUBTITLE=分享技术与生活
BLOG_DESCRIPTION=一个专注于技术分享的个人博客
BLOG_KEYWORDS=Python,Flask,Web开发,技术博客
BLOG_AUTHOR=博主
BLOG_EMAIL=admin@example.com

# 域名配置
BLOG_DOMAIN=sub.wswldcs.edu.deal
BLOG_URL=https://sub.wswldcs.edu.deal

# API配置（可选）
WEATHER_API_KEY=your-weather-api-key

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/var/log/aublog/app.log

# 其他配置
DEBUG=False
TESTING=False
